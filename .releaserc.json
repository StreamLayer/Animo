{
  "branches": ["master"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "angular"
    }],
    ["@semantic-release/exec", {
      "prepareCmd": "carthage build --commitish v${nextRelease.version} --cache-builds --archive --archive-output SLR_Animo.framework.zip"
    }],
    ["@semantic-release/git", {
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
      "assets": ["report.json"]
    }],
    ["@semantic-release/github", {
      "assets": [
        { "path": "SLR_Animo.framework.zip" },
        { "path": "report.json" }
      ]
    }]
  ]
}
